# Environment Variables for SentinelAPI Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sentinelapi

# JWT Configuration
JWT_SECRET=change-me
JWT_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Proxy Configuration
PROXY_TARGET_URL=https://jsonplaceholder.typicode.com
PROXY_TIMEOUT=30000
ALLOWED_PROXY_TARGETS=jsonplaceholder.typicode.com,api.github.com,reqres.in,localhost,127.0.0.1

# Security Configuration
AUTO_SANITIZE_RESPONSES=false
BLOCK_XSS_RESPONSES=false
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Other Settings
LOG_LEVEL=info
